          .text(google-plus='invitedFriends.invitation_url')
        a.btn.btn-primary.btn-regular
          //i.fa.fa-facebook-square
          .text(fb-like='invitedFriends.invitation_url')
        a.btn.btn-primary.btn-regular
          //i.fa.fa-twitter-square
          .text(tweet='invitedFriends.invitation_url')
        a.btn.btn-primary.btn-regular
          //i.fa.fa-linkedin-square
          .text(pin-it="invitedFriends.invitation_url")

  .row
    .col-xs-12
      h5 Your referral link
      ct-referral-link(referral-url="invitedFriends.invitation_url")
